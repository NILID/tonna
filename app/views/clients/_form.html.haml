= form_for @client, html: { class: "form form-horizontal client" } do |f|
  .form-group
    = f.label :title, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :title, class: 'form-control', required: true
    = f.error_span(:title)
  .form-group
    = f.label :desc, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :desc, class: 'form-control'
    = f.error_span(:desc)
  .form-group
    = f.label :email, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :email, class: 'form-control', required: true
    = f.error_span(:email)
  .form-group
    = f.label :phone, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :phone, class: 'form-control'
    = f.error_span(:phone)
  .form-group
    = f.label :url, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :url, class: 'form-control'
    = f.error_span(:url)
  .form-group
    = f.label :site, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :site, class: 'form-control'
    = f.error_span(:site)
  .form-group
    = f.label :send_hello, class: 'control-label col-lg-2'
    .col-lg-10
      = f.check_box :send_hello, class: 'form-control', required: true
    = f.error_span(:send_hello)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), clients_path, :class => 'btn btn-default'
